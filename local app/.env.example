# Cardano Community Suite - Environment Configuration Example
# Copy this file to .env and configure with your actual values

# =====================================
# CARDANO NETWORK CONFIGURATION
# =====================================

# Cardano Network (mainnet, testnet, preview, or preprod)
CARDANO_NETWORK=mainnet

# Network magic number for custom networks
# mainnet: 764824073
# testnet: 1097911063
# preview: 2
# preprod: 1
CARDANO_NETWORK_MAGIC=764824073

# Cardano Node Socket (for direct node connection)
CARDANO_NODE_SOCKET_PATH=/run/cardano-node/node.socket

# Koios API Endpoint (if using Koios instead of local node)
KOIOS_API_URL=https://api.koios.rest/api/v1
# KOIOS_API_URL=https://preprod-api.koios.rest/api/v1  # For preprod

# =====================================
# TOOLS CONFIGURATION
# =====================================

# Tool Paths (set by setup scripts, but can override)
CARDANO_ADDRESSES_PATH=./tools/cardano-addresses
CARDANO_CLI_PATH=./tools/cardano-cli
CARDANO_SIGNER_PATH=./tools/cardano-signer

# Tool versions (should match installed versions)
CARDANO_ADDRESSES_VERSION=3.12.0
CARDANO_CLI_VERSION=8.14.0
CARDANO_SIGNER_VERSION=1.32.0

# =====================================
# APPLICATION CONFIGURATION
# =====================================

# Application Environment
NODE_ENV=production
# NODE_ENV=development  # For development

# Application Name
APP_NAME=Cardano Community Suite

# Application Version
APP_VERSION=1.0.0

# =====================================
# WEB APPLICATION CONFIGURATION
# =====================================

# Frontend Settings
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
FRONTEND_PROTOCOL=http

# Backend Settings
BACKEND_PORT=3001
BACKEND_HOST=localhost
BACKEND_PROTOCOL=http

# API Endpoints
API_BASE_URL=http://localhost:3001/api

# =====================================
# DATABASE CONFIGURATION (Optional)
# =====================================

# Database Type (sqlite, postgres, mysql)
DB_TYPE=sqlite

# SQLite Configuration
DB_SQLITE_PATH=./data/community.db

# PostgreSQL Configuration (if using PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cardano_community
# DB_USER=cardano_user
# DB_PASSWORD=your_secure_password

# =====================================
# WALLET & KEYS CONFIGURATION
# =====================================

# Default Wallet Directory
WALLET_DIR=./wallets

# Key Generation Settings
KEY_ALGORITHM=ed25519
KEY_DERIVATION_PATH=m/1852'/1815'/0'/0/0

# Address Type (enterprise, stake, payment)
ADDRESS_TYPE=enterprise

# =====================================
# SECURITY CONFIGURATION
# =====================================

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Expiration Time
JWT_EXPIRATION=24h

# Session Timeout (in minutes)
SESSION_TIMEOUT=30

# Maximum Login Attempts
MAX_LOGIN_ATTEMPTS=5

# Lockout Duration (in minutes)
LOCKOUT_DURATION=15

# =====================================
# SIGNING CONFIGURATION
# =====================================

# Signing Method (offline, online)
SIGNING_METHOD=offline

# Event Timeout (in minutes, for challenge-response)
EVENT_TIMEOUT=5

# Signature Verification Strict Mode
STRICT_VERIFICATION=true

# =====================================
# LOGGING CONFIGURATION
# =====================================

# Log Level (error, warn, info, debug, trace)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Log Format (json, simple, combined)
LOG_FORMAT=json

# Maximum Log File Size (in MB)
MAX_LOG_SIZE=100

# Log Retention (in days)
LOG_RETENTION=30

# =====================================
# ADMIN CONFIGURATION
# =====================================

# Admin User Email
ADMIN_EMAIL=admin@cardano-community.local

# Admin Dashboard Port
ADMIN_PORT=3002

# Admin Session Timeout (in minutes)
ADMIN_SESSION_TIMEOUT=60

# Enable Two-Factor Authentication
ADMIN_2FA_ENABLED=false

# =====================================
# EXTERNAL SERVICES
# =====================================

# Email Service Configuration
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@cardano-community.local

# SMTP TLS
EMAIL_TLS=true

# =====================================
# BLOCKCHAIN EXPLORER INTEGRATION
# =====================================

# Blockchain Explorer URLs
EXPLORER_MAINNET=https://cexplorer.io
EXPLORER_TESTNET=https://testnet.cexplorer.io
EXPLORER_PREVIEW=https://preview.cexplorer.io
EXPLORER_PREPROD=https://preprod.cexplorer.io

# =====================================
# FEATURE FLAGS
# =====================================

# Enable/Disable Features
FEATURE_WALLET_CREATION=true
FEATURE_OFFLINE_SIGNING=true
FEATURE_EVENT_VERIFICATION=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_2FA=false

# =====================================
# DEVELOPMENT CONFIGURATION
# =====================================

# Enable Debug Mode
DEBUG=false

# Verbose Logging
VERBOSE_LOGGING=false

# Allow CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Hot Reload (for development)
HOT_RELOAD=false

# =====================================
# DOCKER CONFIGURATION (if using Docker)
# =====================================

# Docker Image Tags
DOCKER_BACKEND_IMAGE=cardano-community-backend:latest
DOCKER_FRONTEND_IMAGE=cardano-community-frontend:latest

# Docker Network
DOCKER_NETWORK=cardano-network

# =====================================
# CRYPTOCURRENCY CONFIGURATION
# =====================================

# Lovelace Conversion (1 ADA = 1,000,000 Lovelace)
LOVELACE_PER_ADA=1000000

# Transaction Fee (in Lovelace)
TX_FEE=170000

# Minimum UTXO (in Lovelace)
MIN_UTXO=2000000

# =====================================
# RATE LIMITING
# =====================================

# API Rate Limit (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =====================================
# CACHE CONFIGURATION
# =====================================

# Cache Type (memory, redis)
CACHE_TYPE=memory

# Cache TTL (in seconds)
CACHE_TTL=3600

# Redis Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# =====================================
# BACKUP & RECOVERY
# =====================================

# Backup Directory
BACKUP_DIR=./backups

# Backup Frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup Retention (in days)
BACKUP_RETENTION=30

# =====================================
# PROXY CONFIGURATION (if behind proxy)
# =====================================

# HTTP Proxy
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS Proxy
# HTTPS_PROXY=https://proxy.example.com:8080

# No Proxy (comma-separated)
# NO_PROXY=localhost,127.0.0.1

# =====================================
# MONITORING & METRICS
# =====================================

# Enable Metrics Collection
METRICS_ENABLED=false

# Prometheus Port
METRICS_PORT=9090

# =====================================
# NOTES
# =====================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for all services
# 3. For production, use environment-specific secrets management
# 4. All sensitive values should be obtained from secure sources
# 5. Paths can be absolute or relative to the application root
# 6. Values with spaces should be quoted
