<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CommunityAdmin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Cardano Community Admin Dashboard"
    ExtendsContentIntoTitleBar="True"
    IsMaximizeButtonVisible="True"
    IsMinimizeButtonVisible="True">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Mica Backdrop for Windows 11 -->
        <Grid.Background>
            <SolidColorBrush Color="#1E1E1E" />
        </Grid.Background>

        <!-- Main Layout: Sidebar + Content -->
        <Grid ColumnDefinitions="280,*" RowDefinitions="*,50">
            
            <!-- LEFT SIDEBAR -->
            <Grid Grid.Row="0" Grid.Column="0" Background="#1A1A1A" Padding="0,50,0,0" BorderThickness="0,0,1,0" BorderBrush="#404040">
                <StackPanel Padding="15" Spacing="8">
                    <!-- Sidebar Title -->
                    <TextBlock Text="ðŸ“‹ Admin Actions" FontSize="16" FontWeight="Bold" Foreground="#00FFFF" Margin="0,0,0,15" />
                    
                    <!-- Challenge Button -->
                    <Button x:Name="BtnGenChallenge"
                            Content="Generate Challenge"
                            Height="45"
                            Foreground="White"
                            FontSize="14"
                            Background="#1A7F4E"
                            Click="BtnGenChallenge_Click">
                        <Button.CornerRadius>
                            <CornerRadius TopLeft="6" TopRight="6" BottomLeft="6" BottomRight="6" />
                        </Button.CornerRadius>
                    </Button>

                    <!-- Verify Signature Button -->
                    <Button x:Name="BtnVerifySignature"
                            Content="Verify Signature"
                            Height="45"
                            Foreground="White"
                            FontSize="14"
                            Background="#1A7F4E"
                            Click="BtnVerifySignature_Click">
                        <Button.CornerRadius>
                            <CornerRadius TopLeft="6" TopRight="6" BottomLeft="6" BottomRight="6" />
                        </Button.CornerRadius>
                    </Button>

                    <!-- Check On-Chain Button -->
                    <Button x:Name="BtnCheckOnChain"
                            Content="Check On-Chain Stake"
                            Height="45"
                            Foreground="White"
                            FontSize="14"
                            Background="#1A7F4E"
                            Click="BtnCheckOnChain_Click">
                        <Button.CornerRadius>
                            <CornerRadius TopLeft="6" TopRight="6" BottomLeft="6" BottomRight="6" />
                        </Button.CornerRadius>
                    </Button>

                    <!-- View Registry Button -->
                    <Button x:Name="BtnViewRegistry"
                            Content="View Registry"
                            Height="45"
                            Foreground="White"
                            FontSize="14"
                            Background="#1A7F4E"
                            Click="BtnViewRegistry_Click">
                        <Button.CornerRadius>
                            <CornerRadius TopLeft="6" TopRight="6" BottomLeft="6" BottomRight="6" />
                        </Button.CornerRadius>
                    </Button>

                    <!-- Export Report Button -->
                    <Button x:Name="BtnExportReport"
                            Content="Export Report"
                            Height="45"
                            Foreground="White"
                            FontSize="14"
                            Background="#1A7F4E"
                            Click="BtnExportReport_Click">
                        <Button.CornerRadius>
                            <CornerRadius TopLeft="6" TopRight="6" BottomLeft="6" BottomRight="6" />
                        </Button.CornerRadius>
                    </Button>

                    <!-- Statistics Section -->
                    <TextBlock Text="ðŸ“Š Statistics" FontSize="14" FontWeight="Bold" Foreground="#00FF00" Margin="0,20,0,10" />
                    <TextBlock x:Name="StatsText" 
                               Text="Total Users: 0&#x0a;Verified: 0&#x0a;Communities: 0" 
                               FontSize="12" 
                               Foreground="#CCCCCC"
                               LineHeight="18" />

                    <!-- About Section -->
                    <StackPanel Margin="0,20,0,0" Spacing="5">
                        <TextBlock Text="About" FontSize="12" FontWeight="Bold" Foreground="#808080" />
                        <TextBlock Text="Cardano Community" FontSize="11" Foreground="#606060" />
                        <TextBlock Text="Admin Dashboard v1.0" FontSize="11" Foreground="#606060" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- RIGHT CONTENT AREA -->
            <Grid Grid.Row="0" Grid.Column="1" Padding="0,50,0,0" Background="#0A0A0A">
                <StackPanel Padding="30" Spacing="20">
                    <!-- Content Title -->
                    <TextBlock x:Name="ContentTitle" 
                               Text="Welcome to Admin Dashboard" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#00FFFF" />

                    <!-- Output Area -->
                    <Border BorderThickness="1" BorderBrush="#404040" CornerRadius="6" Background="#151515" Height="400">
                        <ScrollViewer>
                            <RichTextBlock x:Name="OutputContent" 
                                          Foreground="#00FF00" 
                                          FontFamily="Courier New" 
                                          FontSize="12"
                                          Padding="15">
                                <Paragraph>
                                    <Run Text="ðŸ‘¨â€ðŸ’¼ Community Admin Dashboard Ready" Foreground="#00FFFF" />
                                    <LineBreak />
                                    <Run Text="Select an action from the left sidebar to begin." Foreground="#CCCCCC" />
                                </Paragraph>
                            </RichTextBlock>
                        </ScrollViewer>
                    </Border>

                    <!-- Action Area with Input Fields (Initially Hidden) -->
                    <StackPanel x:Name="ActionPanel" Visibility="Collapsed" Spacing="15">
                        <TextBlock Text="Action Input" FontSize="16" FontWeight="Bold" Foreground="#00FFFF" />
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="Community ID:" Foreground="#CCCCCC" FontSize="12" />
                            <TextBox x:Name="InputCommunityId" 
                                    Text="cardano-community"
                                    Background="#1A1A1A"
                                    Foreground="White"
                                    BorderBrush="#404040"
                                    Height="36"
                                    Padding="10,8,10,8" />
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Message/Data:" Foreground="#CCCCCC" FontSize="12" />
                            <TextBox x:Name="InputMessage" 
                                    Text=""
                                    Background="#1A1A1A"
                                    Foreground="White"
                                    BorderBrush="#404040"
                                    Height="80"
                                    AcceptsReturn="True"
                                    Padding="10,8,10,8" />
                        </StackPanel>

                        <Button Content="Execute Action" 
                                Background="#1A7F4E"
                                Foreground="White"
                                Height="40"
                                Click="ExecuteAction_Click" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- STATUS BAR (BOTTOM) -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#404040" Background="#1A1A1A" Padding="15,0">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBlock x:Name="StatusBar" 
                               Text="âœ“ Ready" 
                               VerticalAlignment="Center" 
                               Foreground="#00FF00" 
                               FontSize="12" />
                    
                    <TextBlock Grid.Column="1" 
                               x:Name="TimestampBar"
                               Text="" 
                               VerticalAlignment="Center" 
                               Foreground="#808080" 
                               FontSize="11"
                               Margin="0,0,20,0" />
                    
                    <TextBlock Grid.Column="2" 
                               Text="WinUI 3.0" 
                               VerticalAlignment="Center" 
                               Foreground="#606060" 
                               FontSize="11" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
