<Application
    x:Class="CardanoLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CardanoLauncher">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Application-level Resources -->
            <Color x:Key="PrimaryBrandColor">#0078D4</Color>
            <Color x:Key="CardanoPurple">#670883</Color>
            <Color x:Key="SuccessGreen">#107C10</Color>
            <Color x:Key="WarningOrange">#FFB900</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
