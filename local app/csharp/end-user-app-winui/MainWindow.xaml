<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CardanoEndUserTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CardanoEndUserTool"
    Title="Cardano End-User Tools"
    ExtendsContentIntoTitleBar="True">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar Area -->
        <Grid 
            x:Name="AppTitleBar"
            Height="48"
            Padding="16,0,0,0"
            VerticalAlignment="Top"
            Background="Transparent">
            <TextBlock 
                x:Name="AppTitle"
                Text="ðŸ” Cardano End-User Tools"
                Style="{StaticResource TitleTextBlockStyle}"
                VerticalAlignment="Center"
                Foreground="#00FFFF"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <StackPanel 
                Grid.Column="0"
                Spacing="12"
                Padding="16"
                BorderThickness="1"
                BorderBrush="#333333"
                CornerRadius="8"
                Background="#1E1E1E">
                
                <!-- Header -->
                <TextBlock 
                    Text="Functions"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Foreground="#00FFFF"
                    Margin="0,0,0,8"/>

                <!-- Generate Keypair Button -->
                <Button
                    x:Name="BtnKeygen"
                    Content="ðŸ”‘ Generate Keypair"
                    Height="44"
                    Style="{StaticResource AccentButtonStyle}"
                    Background="#2E5090"
                    Foreground="White"
                    FontSize="14"
                    CornerRadius="6"
                    Click="BtnKeygen_Click"/>

                <!-- Sign Message Button -->
                <Button
                    x:Name="BtnSign"
                    Content="âœï¸ Sign Message"
                    Height="44"
                    Background="#2E5090"
                    Foreground="White"
                    FontSize="14"
                    CornerRadius="6"
                    Click="BtnSign_Click"/>

                <!-- Export Wallet Button -->
                <Button
                    x:Name="BtnExport"
                    Content="ðŸ’¾ Export Wallet"
                    Height="44"
                    Background="#2E5090"
                    Foreground="White"
                    FontSize="14"
                    CornerRadius="6"
                    Click="BtnExport_Click"/>

                <!-- Verify Signature Button -->
                <Button
                    x:Name="BtnVerify"
                    Content="âœ“ Verify Signature"
                    Height="44"
                    Background="#2E5090"
                    Foreground="White"
                    FontSize="14"
                    CornerRadius="6"
                    Click="BtnVerify_Click"/>

                <Separator Margin="0,8"/>

                <!-- About Section -->
                <TextBlock 
                    Text="About"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Foreground="#888888"
                    FontSize="12"
                    Margin="0,12,0,4"/>

                <TextBlock 
                    Text="Version 1.0.0"
                    FontSize="12"
                    Foreground="#666666"/>

                <TextBlock 
                    Text="Cardano Community Suite"
                    FontSize="12"
                    Foreground="#666666"
                    TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Right Content Panel -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock
                    Grid.Row="0"
                    x:Name="ContentTitle"
                    Text="Welcome"
                    Style="{StaticResource HeadingTextBlockStyle}"
                    Foreground="#00FF00"
                    Margin="0,0,0,12"/>

                <!-- Output Area -->
                <Border
                    Grid.Row="1"
                    BorderThickness="1"
                    BorderBrush="#333333"
                    CornerRadius="8"
                    Background="#0A0A0A"
                    Padding="12">
                    <ScrollViewer>
                        <TextBlock
                            x:Name="OutputText"
                            Text="Ready to use. Select an option from the left panel."
                            TextWrapping="Wrap"
                            Foreground="#00FF00"
                            FontFamily="Courier New"
                            FontSize="12"
                            LineHeight="20"/>
                    </ScrollViewer>
                </Border>

                <!-- Status Bar -->
                <Grid
                    Grid.Row="2"
                    Height="36"
                    Margin="0,12,0,0"
                    Padding="12,0"
                    Background="#1E1E1E"
                    CornerRadius="4"
                    BorderThickness="1"
                    BorderBrush="#333333">
                    <TextBlock
                        x:Name="StatusText"
                        Text="Ready"
                        VerticalAlignment="Center"
                        Foreground="#888888"
                        FontSize="12"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
