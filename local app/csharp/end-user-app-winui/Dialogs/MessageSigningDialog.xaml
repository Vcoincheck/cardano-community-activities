<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CardanoEndUserTool.Dialogs.MessageSigningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CardanoEndUserTool.Dialogs"
    Title="Sign Message"
    PrimaryButtonText="Sign Offline"
    SecondaryButtonText="Sign via Wallet"
    CloseButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid Padding="20" MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock
            Grid.Row="0"
            Text="Enter the message you want to sign:"
            FontSize="14"
            Foreground="#00FFFF"
            Margin="0,0,0,12"/>

        <!-- Message Input -->
        <TextBox
            x:Name="MessageTextBox"
            Grid.Row="1"
            Height="150"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            PlaceholderText="Enter message..."
            Background="#1E1E1E"
            Foreground="#00FF00"
            BorderBrush="#333333"/>
    </Grid>
</ContentDialog>
