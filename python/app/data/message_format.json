{
  "version": "1.0",
  "description": "Cardano Message Format Specification",
  "formats": {
    "plain_text": {
      "name": "Plain Text",
      "encoding": "utf-8",
      "example": "I hereby verify my membership and sign this challenge"
    },
    "json": {
      "name": "JSON",
      "encoding": "utf-8",
      "structure": {
        "message": "string",
        "timestamp": "ISO 8601",
        "nonce": "hex string",
        "action": "string"
      },
      "example": {
        "message": "I hereby verify my membership",
        "timestamp": "2025-12-04T10:00:00Z",
        "nonce": "a1b2c3d4e5f6g7h8",
        "action": "verify_membership"
      }
    },
    "hex": {
      "name": "Hexadecimal",
      "encoding": "hex-encoded UTF-8",
      "example": "49206865726562792076657269667920..."
    },
    "base64": {
      "name": "Base64",
      "encoding": "base64-encoded UTF-8",
      "example": "SSBoZXJlYnkgdmVyaWZ5IG15IG1lbWJlcnNoaXA="
    }
  },
  "requirements": {
    "max_length": 10000,
    "min_length": 1,
    "character_set": "UTF-8",
    "special_chars": "allowed"
  }
}
